{
	"compilerOptions": {
		"declaration": true,
		"module": "commonjs",
		"target": "ES2019",
		"lib": ["ES2019"],
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"removeComments": true,
		"composite": true,
		"sourceMap": true,
		"outDir": "out",

		"baseUrl": "src",
		"plugins": [
			{ "transform": "typescript-transform-paths" },
			{
				"transform": "typescript-transform-paths",
				"afterDeclarations": true
			}
		]
	}
}
