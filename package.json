{
	"name": "roblox-ts",
	"version": "0.2.14",
	"description": "",
	"main": "out/index.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/roblox-ts/roblox-ts.git"
	},
	"bin": {
		"rbxtsc": "out/cli.js"
	},
	"scripts": {
		"tslint": "npx tslint -p tsconfig.json",
		"prettier": "npx prettier --config ./.prettierrc.json --write \"**/*.ts\"",
		"prettylint": "npx prettylint --config ./.prettierrc.json \"**/*.ts\"",
		"build": "npx tsc",
		"test-compile": "mocha --timeout 0 --recursive out/test.js",
		"test-compile-ci": "NODE_ENV=test nyc npm run test-compile",
		"test-run": "lua tests/spec.lua",
		"test": "npm run build && npm run test-compile && npm run test-run",
		"ci": "npm run build && npm run test-compile-ci && npm run test-run",
		"coverage": "nyc report --reporter=text-lcov | coveralls",
		"prepublishOnly": "npm run build",
		"types": "cd tests && npm install @rbxts/types"
	},
	"nyc": {
		"all": true,
		"extends": "@istanbuljs/nyc-config-typescript",
		"include": [
			"src/compiler/**",
			"out/compiler/**"
		]
	},
	"author": "",
	"license": "MIT",
	"dependencies": {
		"ajv": "^6.10.2",
		"chokidar": "^3.0.2",
		"cross-spawn": "^7.0.0",
		"fs-extra": "^8.1.0",
		"klaw": "^3.0.0",
		"luamin": "^1.0.4",
		"node-persist": "^3.0.5",
		"ts-morph": "^4.0.0",
		"universal-analytics": "^0.4.20",
		"uuid": "^3.3.3",
		"yargs": "^14.0.0"
	},
	"devDependencies": {
		"@istanbuljs/nyc-config-typescript": "^0.1.3",
		"@types/cross-spawn": "^6.0.0",
		"@types/fs-extra": "^8.0.0",
		"@types/klaw": "^3.0.0",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.7.4",
		"@types/node-persist": "0.0.33",
		"@types/universal-analytics": "^0.4.3",
		"@types/uuid": "^3.4.5",
		"@types/yargs": "^13.0.2",
		"coveralls": "^3.0.6",
		"mocha": "^6.2.0",
		"nyc": "^14.1.1",
		"prettier": "^1.18.2",
		"prettylint": "^1.0.0",
		"source-map-support": "^0.5.13",
		"ts-node": "^8.3.0",
		"tslint": "^5.19.0"
	},
	"files": [
		"out",
		"lib",
		"templates",
		"CHANGELOG.md",
		"rojo-schema.json",
		"!**/*.js.map"
	]
}
