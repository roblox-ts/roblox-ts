{
	"name": "roblox-ts",
	"version": "0.4.0",
	"private": true,
	"description": "A TypeScript-to-Luau Compiler for Roblox",
	"main": "out/CLI/index.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/roblox-ts/roblox-ts.git"
	},
	"bin": {
		"rbxtsc": "out/CLI/cli.js"
	},
	"scripts": {
		"prepare": "npm run build",
		"build": "ttsc -b",
		"build-watch": "ttsc -b -w",
		"eslint": "eslint \"src/**/*.ts\" --max-warnings 0",
		"devlink": "cd devlink && npm link",
		"test": "npm run build && npm run test-setup && npm run test-compile && npm run test-rojo && npm run test-run",
		"test-setup": "cd tests && npm install @rbxts/types@latest",
		"test-compile": "nyc mocha --timeout 0 --recursive out/CLI/test.js",
		"test-rojo": "rojo build tests -o ./tests/test.rbxlx",
		"test-run": "run-in-roblox --place ./tests/test.rbxlx --script ./tests/out/main.server.lua"
	},
	"nyc": {
		"all": true,
		"reporter": [
			"lcov"
		],
		"extension": [
			".ts"
		],
		"include": [
			"out/**/*.js",
			"src/**/*.ts"
		],
		"exclude": [
			"src/CLI",
			"src/Project"
		]
	},
	"author": "",
	"license": "MIT",
	"dependencies": {
		"ajv": "^6.12.3",
		"byots": "^4.0.0-dev.20200512.13.50",
		"chokidar": "^3.4.0",
		"fs-extra": "^8.1.0",
		"kleur": "^3.0.3",
		"prompts": "^2.3.2",
		"ts-simple-type": "^0.3.7",
		"typescript": "^3.9.5",
		"yargs": "^15.3.1"
	},
	"devDependencies": {
		"@types/fs-extra": "^8.1.0",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.13.4",
		"@types/prompts": "^2.0.8",
		"@types/yargs": "^15.0.4",
		"@typescript-eslint/eslint-plugin": "^2.29.0",
		"@typescript-eslint/parser": "^2.29.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.3",
		"mocha": "^7.1.2",
		"nyc": "^15.1.0",
		"prettier": "^1.19.1",
		"ts-node": "^8.10.1",
		"ttypescript": "^1.5.10",
		"typescript-transform-paths": "^1.1.14"
	},
	"files": [
		"out",
		"lib",
		"templates",
		"CHANGELOG.md",
		"rojo-schema.json",
		"!**/*.js.map"
	]
}
