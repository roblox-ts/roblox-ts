{
	"name": "roblox-ts",
	"version": "0.2.14",
	"description": "",
	"main": "out/index.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/roblox-ts/roblox-ts.git"
	},
	"bin": {
		"rbxtsc": "out/cli.js"
	},
	"scripts": {
		"eslint": "npx eslint \"src/**/*.ts\" --max-warnings 0",
		"build": "npx tsc",
		"test-compile": "mocha --timeout 0 --recursive out/test.js",
		"test-compile-ci": "NODE_ENV=test nyc npm run test-compile",
		"test-run": "lua tests/spec.lua",
		"test": "npm run build && npm run test-compile && npm run test-run",
		"ci": "npm run build && npm run test-compile-ci && npm run test-run",
		"coverage": "nyc report --reporter=lcov",
		"prepublishOnly": "npm run build",
		"types": "cd tests && npm install @rbxts/types"
	},
	"nyc": {
		"all": true,
		"include": [ "out/compiler/**" ]
	},
	"author": "",
	"license": "MIT",
	"dependencies": {
		"ajv": "^6.10.2",
		"chokidar": "^3.3.0",
		"cross-spawn": "^7.0.1",
		"fs-extra": "^8.1.0",
		"klaw": "^3.0.0",
		"luamin": "^1.0.4",
		"node-persist": "^3.0.5",
		"ts-morph": "^5.0.0",
		"universal-analytics": "^0.4.20",
		"uuid": "^3.3.3",
		"yargs": "^15.0.1"
	},
	"devDependencies": {
		"@types/cross-spawn": "^6.0.1",
		"@types/fs-extra": "^8.0.1",
		"@types/klaw": "^3.0.0",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.12.8",
		"@types/node-persist": "3.0.0",
		"@types/universal-analytics": "^0.4.3",
		"@types/uuid": "^3.4.6",
		"@types/yargs": "^13.0.3",
		"@typescript-eslint/eslint-plugin": "^2.7.0",
		"@typescript-eslint/parser": "^2.7.0",
		"eslint": "^6.6.0",
		"eslint-config-prettier": "^6.5.0",
		"eslint-plugin-prettier": "^3.1.1",
		"mocha": "^6.2.2",
		"nyc": "^14.1.1",
		"prettier": "^1.19.1",
		"prettylint": "^1.0.0",
		"tslint": "^5.20.1"
	},
	"files": [
		"out",
		"lib",
		"templates",
		"CHANGELOG.md",
		"rojo-schema.json",
		"!**/*.js.map"
	]
}
