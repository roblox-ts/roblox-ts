{
	"compilerOptions": {
		// required
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true,
		"isolatedModules": true,
		"module": "commonjs",
		"noLib": true,
		"strict": true,
		"target": "es6",
		"types": [
			"rbx-types"
		],
		// required, configurable
		"rootDir": "src",
		"outDir": "out",
		// optional
		"baseUrl": "src",
		"declaration": false,
		// optional, non-configurable
		"jsx": "react",
		"jsxFactory": "Roact.createElement"
	},
	"typeAcquisition": {
		"enable": true
	}
}
